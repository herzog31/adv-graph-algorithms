                                                var node = demandNodes[n];
                                                var newn = jQuery.extend(true,{},node);
                                                new_graph.nodes[node.getNodeID()] = newn;
                                            }
                                            for(var s in supplyNodes){
                                                for(var d in supplyNodes){
